{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["ES2019"],
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "dist/",
    "resolveJsonModule": true
  },
  "include": ["src", "integrations"],
  "exclude": ["src/clients/**/*", "**/*.test.*", "dist"]
}
